<UserControl x:Class="Mecha.View.Wpf.Controls.PathInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mecha.View.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="label" Grid.Column="0" Content="{Binding DisplayName}"/>

        <TextBox x:Name="txtBox" Grid.Column="1"></TextBox>
        
        <Button x:Name="browseBtn" Grid.Column="2" Width="128" ToolTip="{x:Null}">Browse</Button>
        
    </Grid>
</UserControl>
